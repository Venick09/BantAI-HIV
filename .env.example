# Database
DATABASE_URL="postgresql://postgres:postgres@127.0.0.1:54322/postgres"

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key
CLERK_SECRET_KEY=your_clerk_secret_key
CLERK_WEBHOOK_SECRET=your_clerk_webhook_secret # Get this from Clerk Dashboard > Webhooks
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/login # do not change
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/signup # do not change

# SMS Configuration
SMS_PROVIDER=semaphore # Options: semaphore, twilio

# Twilio Configuration (if using Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Semaphore Configuration (if using Semaphore)
SEMAPHORE_API_KEY=your_semaphore_api_key
SEMAPHORE_SENDER_NAME=
SEMAPHORE_ENDPOINT=https://api.semaphore.co/api/v4

# Security Keys (IMPORTANT: Generate secure random keys for production)
OTP_SECRET=generate-a-secure-random-key-for-production
JWT_SECRET=generate-a-secure-random-key-for-production